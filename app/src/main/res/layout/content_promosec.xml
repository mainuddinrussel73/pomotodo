<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/secondary_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000">

    <ImageButton
        android:id="@+id/cancel_task"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
        android:paddingTop="@dimen/alerter_activity_horizontal_margin"
        android:paddingLeft="@dimen/alerter_activity_horizontal_margin"
        android:paddingBottom="@dimen/alerter_activity_horizontal_margin"
        android:paddingRight="@dimen/alerter_activity_horizontal_margin"
        android:backgroundTint="#B140FA"
        android:background="@drawable/ic_arrow_drop_up_black_24dp">


    </ImageButton>

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginTop="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginRight="@dimen/alerter_activity_horizontal_margin"
        android:paddingLeft="@dimen/alerter_activity_horizontal_margin"
        android:paddingRight="@dimen/alerter_activity_horizontal_margin"
        app:cpb_background_progressbar_color="#272627"
        app:cpb_background_progressbar_width="35dp"
        app:cpb_progress="30"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="#B140FA"
        app:cpb_progressbar_width="20dp"
        app:cpb_round_border="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="-18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/procountH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="180dp"
            android:text="00"
            android:textColor="#B140FA"
            android:fontFamily="@font/lilita_regular"
            android:textSize="50dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="175dp"
            android:text=":"
            android:textColor="#B140FA"
            android:textSize="50dp">

        </TextView>

        <TextView
            android:id="@+id/procountM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="180dp"
            android:text="00"
            android:textColor="#B140FA"
            android:textSize="50dp"
            android:fontFamily="@font/lilita_regular"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="175dp"
            android:text=":"
            android:textColor="#B140FA"
            android:textSize="50dp">

        </TextView>

        <TextView
            android:id="@+id/procountS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="180dp"
            android:text="00"
            android:textColor="#B140FA"
            android:textSize="50dp"
            android:fontFamily="@font/lilita_regular"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="67dp"
        android:background="@drawable/background_card_dark">


        <TextView
            android:id="@+id/tasktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"

            android:layout_marginEnd="9dp"
            android:text="Task name"
            android:textAlignment="center"
            android:textColor="#B140FA"
            android:textSize="30dp"
            android:fontFamily="@font/lilita_regular"
            android:textStyle="italic">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tasktitle"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_weight="0.25">

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBar01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cpb_background_progressbar_color="#b6bbd8"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="@color/A400red"
                    app:cpb_progressbar_width="5dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_weight="0.25">

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBar11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cpb_background_progressbar_color="#b6bbd8"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="@color/A400red"
                    app:cpb_progressbar_width="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_weight="0.25">

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBar12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cpb_background_progressbar_color="#b6bbd8"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="@color/A400red"
                    app:cpb_progressbar_width="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_weight="0.25">

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBar13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cpb_background_progressbar_color="#b6bbd8"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="@color/A400red"
                    app:cpb_progressbar_width="5dp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="600dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#B140FA"
        android:tint="@color/white"
        app:tint="@color/white"
        android:src="@drawable/play_arrow_black_24dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom|left"
        android:layout_marginStart="64dp"
        android:layout_marginTop="600dp"

        android:backgroundTint="#B140FA"
        app:tint="@color/white"
        android:src="@drawable/pause_black_24dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="64dp"
        app:tint="@color/white"
        android:backgroundTint="#B140FA"
        android:src="@drawable/ic_close_black_24dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</RelativeLayout>